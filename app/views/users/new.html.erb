<div class='content d-flex align-items-center'>
  <div class='log-form mx-auto border rounded'>
    <div class='form-tl text-center text-primary'>Sign Up</div>

    <%= form_for :user, url: users_path do |f| %>

      <div>
        <%= f.label :fullName, 'Full Name' %>
        <br/>
        <%= f.text_field :fullName %>
      </div>

      <div>
        <%= f.label :userName, 'Username' %>
        <br/>
        <%= f.text_field :userName %>
      </div>

      <div>
        <%= f.label :email %>
        <br/>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :password %>
        <br/>
        <%= f.password_field :password %>
      </div>
      
      <div>
        <%= f.label :password_confirmation, 'Confirm password' %>
        <br/>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= link_to 'Do you have an account?', new_session_path %>
      <br/>

      <%= f.submit 'Sign Up', class: 'mt-3 mx-auto w-100 btn btn-primary' %>

    <% end %>

  </div>
</div>